package com.hexlet.lesson4;

public class Field {
	
	private char[] field = new char[3];	
	
	public void eraseField() {
		field[0] = ' ';
		field[1] = ' ';
		field[2] = ' ';
	}
	
	public void showField() {
		System.out.println();
		showCell(0);
		showCell(1);
		showCell(2);
		System.out.println();
	}

	private void showCell(int i) {
		System.out.print("[" + field[1] + "]");
	}
	
}
