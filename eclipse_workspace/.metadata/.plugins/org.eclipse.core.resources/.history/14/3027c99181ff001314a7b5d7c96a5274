package com.hexlet.lesson4;

public class Field {
	
	private char[] field = new char[3];
	
	public void showField() {
		System.out.println();
		System.out.print("[" + getField()[0] + "]");
		System.out.print("[" + getField()[1] + "]");
		System.out.print("[" + getField()[2] + "]");
		System.out.println();
	}

	public char[] getField() {
		return field;
	}

	public void setField(char[] field) {
		this.field = field;
	}

}
